<%= link_to "Create a New Merchant", new_admin_merchant_path %>

<section id="enabled_merchants">
  <h3>Enabled Merchants</h3>
  <% @merchants.enabled_merchants.each do |merchant| %>
    <p><%= link_to merchant.name, admin_merchant_path(merchant) %></p>
      <div id="merchant_<%= merchant.id %>">
      <%= button_to "Disable #{merchant.name}", admin_merchant_path(merchant), method: :patch, params: {status: "disabled" } %>
    </div>
  <% end %>    
</section>
  
<section id="disabled_merchants">
  <h3>Disabled Merchants</h3>
  <% @merchants.disabled_merchants.each do |merchant| %>
    <p><%= link_to merchant.name, admin_merchant_path(merchant) %></p>
      <div id="merchant_<%= merchant.id %>">
      <%= button_to "Enable #{merchant.name}", admin_merchant_path(merchant), method: :patch, params: {status: "enabled" } %>
    </div>
  <% end %>
</section>

<div id="top_merchants">
  <h3>Top Merchants</h3>
  <% @merchants.top_five_merchants.each do |top_merch| %>
    <li>
      <%= link_to top_merch.name, admin_merchant_path(top_merch) %>
        <%= "- $ #{top_merch.total_rev} in sales" %>
    </li>
  <% end %>  
</div>