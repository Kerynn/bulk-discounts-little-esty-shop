<section class="right">
  <section id="top_customers"> 
    <h2>Top Customers</h2>
    <% @top_5_customers.each_with_index do |customer, index| %>
      <%= "#{index + 1}. " %> <%= customer.first_name %> <%= customer.last_name %>
      <%= "- #{customer.num_transactions} purchases" %>
      <br>
    <% end %>
  </section>
</section>

<section class="left">
  <section id="incomplete_invoices">
    <h2>Incomplete Invoices</h2>
    <% @incomplete_invoices.each do |invoice| %>
      <div id="incomplete_invoices_<%= invoice.id %>">
        <p>Invoice #<%= link_to invoice.id, admin_invoice_path(invoice) %>
        <%= "- #{invoice.created_at.strftime("%A, %B %-d, %Y")}" %></p>
      </div>
    <% end %> 
  </section>
</section>